<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_imageItem"
        android:paddingTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/goosesofangoaitroi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/txt_nameItem"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Nội Thất"
            android:gravity="center"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_priceItem"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Giá"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_buyItem"
                android:onClick="buyItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Them"/>
            <Button
                android:id="@+id/btn_muaItem"
                android:onClick="buyItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
